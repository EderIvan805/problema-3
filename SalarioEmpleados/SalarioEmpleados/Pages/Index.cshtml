@page
@model IndexModel
@{
    ViewData["Title"] = "Calculo de Salarios";
}

<hr />
<form id="formDatosSalarioBM" class="needs-validation" novalidate>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <h5>Datos de Salario</h5>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <label for="txtNombre" class="col-sm-12 col-lg-2 col-form-label">Nombre de Empleado</label>
                <div class="has-validation col-sm-12 col-lg-4 mb-2">
                    <input type="text" class="form-control" id="txtNombre" placeholder="Introduce el nombre del empleado" required>
                    <div class="invalid-feedback">
                        Escriba el nombre
                    </div>
                </div>
                <label for="txtHorasSemanales" class="col-sm-12 col-lg-2 col-form-label">Horas semanales trabajadas</label>
                <div class="has-validation col-sm-12 col-lg-4 mb-2">
                    <input type="number" step="1" class="form-control" id="txtHorasSemanales" placeholder="Introduce las horas semanales trabajadas" required>
                    <div class="invalid-feedback">
                        Escriba las horas
                    </div>
                </div>
                <label for="txtPagaXHora" class="col-sm-12 col-lg-2 col-form-label">Salario x Hora</label>
                <div class="has-validation col-sm-12 col-lg-4 mb-2">
                    <input type="number" step="0.01" class="form-control" id="txtPagaXHora" placeholder="Introduce el salario por hora" required>
                    <div class="invalid-feedback">
                        Escriba el salario
                    </div>
                </div>
            </div>
            <div class="">
                <div class="py-3">
                    <button id="btnDSCalcular" type="button" class="btn btn-primary ">Calcular</button>
                    <button id="btnDSCancelar" type="reset" class="btn btn-danger">Cancelar</button>
                </div>
                <table class="table table-bordered table-responsive">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Horas semanales trabajadas</th>
                            <th scope="col">Salario x Hora</th>
                            <th scope="col">Salario Bruto</th>
                        </tr>
                    </thead>
                    <tbody id="tblDatosSalario">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

<script src="~/js/salario/DatosSalarioBM.js" asp-append-version="true"></script>
